@model BaseResponseModel<IEnumerable<TrainDto>>

@if (Model.StatusCode != StatusCodes.Status200OK || Model == null)
{
    <div class="loader"></div>
}
else
{
    <div class="row mt-4 p-0 p-md-3">
        @foreach (var train in Model.Data!)
        {
            <div class="col-12 col-sm-6 col-lg-4 mb-4">

                <div class="card h-100 shadow-sm border-0 rounded">

                    <div class="card-header text-white border-0 fs-5 fw-bold d-flex justify-content-between ">
                        @train.Name
                        
                        
                            <!-- Dropdown ... -->
                            <div class="dropdown">
                                <button class="btn btn-link text-dark p-1" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots fs-5"></i>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">

                                    <li class="d-flex align-items-center">
                                        <a class="dropdown-item" href="/Incidents/@train.Id">
                                            <i class="bi bi-card-list blue"></i>
                                            <span class="bold text-secondary">View history</span>
                                        </a>
                                    </li>

                                    <li class="d-flex align-items-center">
                                        <a class="dropdown-item" href="/Incidents/@train.Id">
                                            <i class="bi bi-pencil-square blue"></i>
                                            <span class="bold text-secondary"> Write an incident</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        

                    </div>
                    <div class="card-body wrapper" onclick="window.location.href='/Incidents/@train.Id'">
                        <div class="row g-3">
                            <!-- Левая колонка -->
                            <div class="col-12 col-md-6 mb-4">
                                <!-- Number-->
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div>
                                        <span class="badge bg-light text-muted">Train number:</span>
                                        <span class="fw-bold ms-2 blue">#@train.Number</span>
                                    </div>

                                </div>
                                <!-- Time/Delay -->
                                <div class="mb-2">
                                    <span class="badge bg-light text-muted">Arriving time:</span>
                                    @if (train.DelayTime > 0)
                                    {
                                        //Из-за рандом метода
                                        var delay = train.DelayTime;

                                        if (delay >= 10)
                                        {
                                            <div class="d-inline" style="white-space: nowrap;">
                                                <span class="fw-bold fs-5 ms-2 text-danger delayed" id="delay-@train.Id">@delay </span>
                                                <span class="fw-bold">min</span>
                                            </div>
                                        }
                                        else if (delay > 5)
                                        {
                                            <div class="d-inline mt-2" style="white-space: nowrap;">
                                                <span class="fw-bold ms-2 fs-5 text-warning" id="delay-@train.Id">@delay </span>
                                                <span class="fw-bold">min</span>
                                            </div>

                                        }
                                        else
                                        {
                                            <div class="d-inline" style="white-space: nowrap;">
                                                <span class="fw-bold ms-2 fs-5 text-success" id="delay-@train.Id">@delay </span>
                                                <span class="fw-bold">min</span>
                                            </div>
                                        }


                                    }
                                    else
                                    {
                                        <div class="d-inline" style="white-space: nowrap;">
                                            <span class="fw-bold ms-2 text-success now" id="@train.DelayTime">Now</span>
                                        </div>

                                    }
                                </div>
                            </div>

                            <!-- Правая колонка -->

                            <div class="col-12 col-md-6 d-flex flex-column justify-content-between">

                                @if (train.Incidents?.Count() != 0)
                                {
                                    <!-- Incidents-->
                                    <div class="mb-2 d-flex align-items-center">
                                        <span class="badge bg-light text-muted">Incidents:</span>
                                        <span class="pulse-text pb-2"><i class="bi bi-exclamation-triangle ms-2 fs-4"></i></span>
                                    </div>
                                }
                                else
                                {
                                    <!-- Incidents-->
                                   
                                }


                                <!-- Updated time-->
                                <div class="mb-2">
                                    <span class="badge bg-success text-muted" style="color: white !important;">Updated:</span>
                                    @if ((DateTime.UtcNow - (train.LastDelayUpdateAt ?? train.CreatedAt)).TotalSeconds >= 60)
                                    {
                                        <span class="badge bg-secondary">@((DateTime.UtcNow - (train.LastDelayUpdateAt ?? train.CreatedAt)).TotalMinutes.ToString("0")) min ago</span>

                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@((DateTime.UtcNow - (train.LastDelayUpdateAt ?? train.CreatedAt)).TotalSeconds.ToString("0")) sec ago</span>
                                    }
                                </div>

                            </div>
                            <!-- Next station-->
                            <div class="mt-3 p-2 fw-bold text-primary d-flex align-items-center">
                                <span class="badge bg-light text-muted">Next station:</span>
                                <span class="fw-bold blue fs-5 ms-2">@train.NextStation?.Title</span>

                            </div>
                        </div>

                    </div>


                </div>
            </div>
        }

        
        @await Html.PartialAsync("Components/Modal")
    </div>
}

    <script src="~/js/cardBodyMove.js"></script>
    <script src="~/js/pulseBackground.js"></script>
<script>
  
</script>

