
<!-- Modal -->
<div class="modal fade" id="incidentModal" tabindex="-1" aria-labelledby="incidentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg rounded-4 border-0">

            <!-- Header -->
            <div class="modal-header border-0">
                <h5 class="modal-title" id="incidentModalLabel">
                    <span class="blue bold">Add an</span>
                    <span class="pulse-text">Incident</span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body border-0">
                <form id="incidentForm">

                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Enter your name">
                        <label class="form-label text-danger ps-1" for="username" id="usernameLabel"></label>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary">Reason</label>
                        <select class="form-select" id="reason" name="reason">
                            <option value="">Choose reason...</option>
                            <option value="delay">Delay</option>
                            <option value="technical">Technical issue</option>
                            <option value="weather">Weather conditions</option>
                            <option value="signal">Signal failure</option>
                            <option value="maintenance">Track maintenance</option>
                            <option value="power">Power outage</option>
                            <option value="crew">Crew availability</option>
                            <option value="safety">Safety inspection</option>
                            <option value="schedule">Schedule adjustment</option>
                            <option value="other">Other</option>
                        </select>
                        <label class="form-label text-danger ps-1" for="reason" id="reasonLabel"></label>
                    </div>


                    <div class="mb-3">
                        <label for="comment" class="form-label fw-bold text-secondary">Comment</label>
                        <textarea class="form-control" id="comment" name="comment" rows="3" placeholder="Additional details..."></textarea>
                    </div>

                </form>
            </div>

            <!-- Footer -->
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-danger d-flex align-items-center justify-content-center gap-1" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i>
                    <span>Close</span>
                </button>

                <button type="submit" form="incidentForm" class="btn btn-secondary d-flex align-items-center justify-content-center gap-1">
                    <i class="bi bi-save"></i>
                    <span>Save Incident</span>
                </button>
            </div>


        </div>
    </div>
</div>

